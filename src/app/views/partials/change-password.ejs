<!-- Modal Thông tin hạng ghế-->
<div class="modal fade" id="modalChangPassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Thay đổi mật khẩu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12">
                    <div class="form-group row">
                        <label class="form-label">Mật khẩu cũ</label>
                        <input name="oldPassword" type="text" class="form-control" placeholder="Nhập mật khẩu cũ" required>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label">Mật khẩu mới</label>
                        <input name="newPassword" type="text" class="form-control" placeholder="Nhập mật khẩu mới" required>
                    </div>

                    <div class="form-group row">
                        <label class="col-form-label">Mật khẩu mới</label>
                        <input name="newPasswordRepeat" type="text" class="form-control" placeholder="Nhập lại mật khẩu mới" required>
                    </div>
                    <div class="form-group row">
                        <button type="submit" class="btn btn-primary">Thay đổi</button>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>