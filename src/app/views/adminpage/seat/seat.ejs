<!DOCTYPE html>
<html>

<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="P/D - Admin Dashboard ">
        <meta name="author" content="P/D - Admin Dashboard ">

        <link rel="shortcut icon" href="images/favicon.ico">

        <title>P/D - Admin Dashboard </title>

        <!-- Core css -->
        <%-include ../../include/css%>

        <script src="js/modernizr.min.js"></script>

    </head>


    <body class="fixed-left">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Top Bar Start -->
            <%-include ../../partials/top-bar.ejs%>
            <!-- Top Bar End -->


            <!-- ========== Left Sidebar Start ========== -->
            <%-include ../../partials/left-side-bar.ejs%>
            <!-- Left Sidebar End -->



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <h3 class="m-t-0">Thông tin các hạng ghế</h3>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-20">
                                                <form role="form" action="/seat/add" method="POST">

                                                    <div class="form-group row">
                                                        <label class="col-2 col-form-label">Mã hạng ghế</label>
                                                        <div class="col-10">
                                                            <input name="seatTypeCode" type="text" class="form-control" placeholder="Mã hạng ghế" required>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-2 col-form-label">Tên hạng ghế</label>
                                                        <div class="col-10">
                                                            <input name="name" type="text" class="form-control" placeholder="Tên hạng ghế" required>
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Thêm mới</button>

                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- end row -->

                                </div> <!-- end card-box -->
                            </div><!-- end col -->
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-12">
                                <div class="card-box table-responsive">
                                    <h4 class="m-t-0 header-title">Hạng ghế</h4>
                                    <p class="text-muted font-14 m-b-30">
                                        Danh sách hạng ghế hiện có
                                    </p>

                                    <table id="datatable" class="table table-bordered">
                                        <thead>
                                        <tr>
                                            <th>Mã hạng ghế</th>
                                            <th>Tên hạng ghế</th>
                                            <th>Chức năng</th>
                                        </tr>
                                        </thead>

                                        <tbody>
                                            <%include ../../partials/seat-infor-item.ejs%>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container -->

                </div> <!-- content -->
            <%-include ../../partials/bottom-bar.ejs%>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->

        </div>
        <!-- END wrapper -->

    <!-- Modal Hang Ghe -->
    <%-include ../../partials/notifycation.ejs%>
    <%include ../../partials/notifycation.ejs%>

    <!-- Core js -->
    <%-include ../../include/js.ejs%>

    <script type="text/javascript">
        $(document).ready(function () {
            // Default Datatable
            $('#datatable').DataTable();
        });
    </script>

    </body>

</html>