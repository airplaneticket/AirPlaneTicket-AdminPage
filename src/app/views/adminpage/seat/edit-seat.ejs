<!DOCTYPE html>
<html>

<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="P/D - Admin Dashboard ">
        <meta name="author" content="P/D - Admin Dashboard ">

        <link rel="shortcut icon" href="images/favicon.ico">

        <title>P/D - Admin Dashboard </title>

        <!-- Core css -->
        <%-include ../../include/css%>

        <script src="js/modernizr.min.js"></script>

    </head>


    <body class="fixed-left">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Top Bar Start -->
            <%-include ../../partials/top-bar.ejs%>
            <!-- Top Bar End -->


            <!-- ========== Left Sidebar Start ========== -->
            <%-include ../../partials/left-side-bar.ejs%>
            <!-- Left Sidebar End -->



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <h3 class="m-t-0">Thông tin các hạng ghế</h3>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="p-20">
                                                <form role="form" action="/seat/saveEdit" method="POST">
                                                    <input name="seatTypeId" type="hidden" class="form-control" placeholder="Mã hạng ghế"
                                                    value="<%if(typeof seat === 'object'){%><%=seat._id%><%}%>"">
                                                    <div class="form-group row">
                                                        <label class="col-2 col-form-label">Mã hạng ghế</label>
                                                        <div class="col-10">
                                                            <input name="seatTypeCode" type="text" class="form-control" placeholder="Mã hạng ghế"
                                                            value="<%if(typeof seat === 'object'){%><%=seat.seatTypeCode%><%}%>">
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-2 col-form-label">Tên hạng ghế</label>
                                                        <div class="col-10">
                                                            <input name="name" type="text" class="form-control" placeholder="Tên hạng ghế"
                                                            value="<%if(typeof seat === 'object'){%><%=seat.name%><%}%>">
                                                        </div>
                                                    </div>

                                                    <button type="submit" class="btn btn-primary">Thêm mới</button>

                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- end row -->

                                </div> <!-- end card-box -->
                            </div><!-- end col -->
                        </div>

                    </div> <!-- container -->

                </div> <!-- content -->
            <%-include ../../partials/bottom-bar.ejs%>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->

        </div>
        <%-include ../../include/js.ejs%>


    </body>

</html>